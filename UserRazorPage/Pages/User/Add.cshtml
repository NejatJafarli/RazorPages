@page
@model UserRazorPage.Pages.Shared.AddModel

<div>
        <h3>Add User</h3>
    <hr />
</div>
<div class="form">
    <form method="post">
        <input asp-for="Employee.Id" type="hidden" />
        <div class="form-input">
            <label >Image Url</label>
            <input asp-for="Employee.ImgUrl"  placeholder="Img Url" />
        </div>

        <div class="form-input">
            <label>Name</label>
            <input asp-for="Employee.Name" placeholder="Nejat" />
        </div>
        <div class="form-input">
            <label>Surname</label>
            <input asp-for="Employee.Surname"  placeholder="Jafarli" />
        </div>
        <div class="form-input">
            <label>Email</label>
            <input asp-for="Employee.Email" type="email" placeholder="xxxx@gmail.com" />
        </div>
        <div class="form-input">
            <label>Phone</label>
            <input asp-for="Employee.Phone" placeholder="+994 xx xxx xx xx" />
        </div>
        <div class="form-input">
            <input type="submit" value="Submit" />
        </div>
    </form>
</div>